
<div class="container" id="loginform">
<div class="form">
<h2>Welcome back, you.</h2>
<div class="row">
  <div class="col-12">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :login , :class => 'formfield'%>
  </div>
<br /><br />
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'formfield' %>
  </div>
<br /><br />
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
<br /><br />
  <div class="actions">
    <%= f.submit "Log In", :class => 'buttonupdate'%>
  </div>
<% end %>
</div>
</div>

</div>
</div>
